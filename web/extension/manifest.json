{
  "manifest_version": 3,
  "name": "Axon Companion",
  "version": "0.1.0",
  "description": "Intercepts ChatGPT to enable local memory + personalization.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "webRequest",
    "webNavigation",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "exclude_matches": [
        "https://accounts.google.com/*",
        "https://auth0.openai.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "48": "images/icons/icon48.png",
    "128": "images/icons/icon128.png"
  },
  "browser_action": {
    "default_title": "Axon"
  }
}
