{
  "manifest_version": 3,
  "name": "Axon Companion",
  "version": "0.1.0",
  "description": "Intercepts ChatGPT to enable local memory + personalization.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "exclude_matches": ["https://accounts.google.com/*", "https://auth0.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "images/icons/icon48.png",
    "128": "images/icons/icon128.png"
  },
  "action": {
    "default_title": "Axon"
  }
}